@model CfProjectAdmin.Models.RolePrivilegesModel
   

@{
    ViewBag.Title = "Edit Roles";
}

<h2>Edit Roles</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input name="RoleId" id="RoleId" type="hidden" value="@Model.role.Id" />
        <fieldset>

        <ul>
           @for (var i = 0; i < Model.AllPrivileges.Count ; i++) 
            {
                @Html.HiddenFor(m=> Model.AllPrivileges[i].Id)
                <li>
                    <input type="checkbox"
                           name="SelectedGroups" value="@Model.AllPrivileges[i].Id" id="@Model.AllPrivileges[i].Id"
                           @{if (Model.SelectedRole.Contains(Model.AllPrivileges[i].Id)) { <text> checked='checked' </text>   } } />
                    <label for="@Model.AllPrivileges[i].Id">@Model.AllPrivileges[i].Name</label>
                </li>
    }
        </ul>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
    }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

