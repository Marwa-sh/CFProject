            <div class="card-body collapse out">
                <div class="card-block card-dashboard">
                    <button class="btn btn-success" type="button">
                        @Html.ActionLink((string)ViewBag.Insert + " " + (string)ViewBag.WarrantVwTitle, "Create", "Warrant")
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                        <thead class="bg-primary table-head-color">
					        <tr>
					            <th>
					                @Html.DisplayNameFor(model => model.WarrantVwViewModel.Instance.EmployeeId)
					            </th>
					            <th>
					                @Html.DisplayNameFor(model => model.WarrantVwViewModel.Instance.EmployeeFullName)
					            </th>
					            <th>
					                @Html.DisplayNameFor(model => model.WarrantVwViewModel.Instance.EmployeeDepartmentSalaryWorkPlaceName)
					            </th>
					            <th>
					                @Html.DisplayNameFor(model => model.WarrantVwViewModel.Instance.IsActive)
					            </th>
           
					            <th></th>
					        </tr>
                        </thead>
                        <tbody>
        @foreach (var item in Model.WarrantVwViewModel.List)
        {
				            <tr>
                				<td>
                    				 @Html.DisplayFor(modelItem => item.EmployeeId)
                				</td>
                				<td>
                    				 @Html.DisplayFor(modelItem => item.EmployeeFullName)
                				</td>
                				<td>
                    				 @Html.DisplayFor(modelItem => item.EmployeeDepartmentSalaryWorkPlaceName)
                				</td>
                				<td>
                    				 @Html.CheckBoxFor(modelItem => item.IsActive, new { @disabled = "disabled" ,@class="form-control" })
                				</td>
				                <td>
									<div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
										<button type="button" class="btn btn-info">
					                    	@Html.ActionLink((string)ViewBag.Details, "Details", "Warrant",
                        					new
											{
												id = item.Id
                        					}, null)
                                        </button>
                                        <button type="button" class="btn btn-warning">
					                    	@Html.ActionLink((string)ViewBag.Update, "Edit", "Warrant",
                        					new
                        					{
												id = item.Id
                        					}, null)
                                        </button>
                                        <button type="button" class="btn btn-danger deleteLink" data-original-title="@ViewBag.Delete" id="delete" data-id="@item.Id" data-url="@Url.Action("Delete", "Warrant")">@ViewBag.Delete</button>
                                    </div>
                                </td>
                            </tr>
				        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
