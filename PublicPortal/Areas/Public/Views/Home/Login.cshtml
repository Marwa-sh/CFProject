@using PublicPortal.Models
@model LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" data-textdirection="rtl">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - الصندوق التعاوني بدمشق</title>
        @Styles.Render("~/Content/Layout")
    </head>
<body>
    <div class="app-content content container-fluid">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <div class="col-md-4 offset-md-4 col-xs-10 offset-xs-1  box-shadow-2 p-0">
                    <div class="card border-grey border-lighten-3 m-0">
                        <div class="card-header no-border">
                            <div class="card-title text-xs-center">
                                <div class="p-1"><img alt="logo" src="~/Content/FinalVersion/IBCF.svg"  style="height:200px"></div>
                            </div>
                            <h6 class="card-subtitle line-on-side text-muted text-xs-center font-small-3 pt-2">
                                <span>تسجيل الدخول إلى إدارة الصندوق التعاوني</span>
                            </h6>
                        </div>
                        <div class="card-body collapse in">
                            <div class="card-block">
                                <section id="loginForm">
                                    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <fieldset class="form-group position-relative has-icon-left mb-0">
                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-lg input-lg", @placeholder ="اسم المستخدم"})
                                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                            <div class="form-control-position">
                                                <i class="icon-head"></i>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg input-lg", @placeholder = "كلمة المرور"})
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            <div class="form-control-position">
                                                <i class="icon-key3"></i>
                                            </div>
                                        </fieldset>

                                        <div class="form-group">
                                                <button type="submit" class="btn btn-lg btn-primary btn-block" style="color: #fff;">
                                                    <i class="icon-unlock2"></i>
                                                    تسجيل الدخول
                                                </button>
                                        </div>}
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/Layout")
</body>
</html>







